<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.FurnizorFragment"
    android:background="#FFFFFF">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_buttons"
        android:id="@+id/lista_furnizor"
        android:cacheColorHint="#00000000"
        android:divider="@layout/divider"
        android:dividerHeight="10dp"></ListView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-5dp"
        android:weightSum="3"
        >
        <Button
            android:id="@+id/flow_date_gen"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Date generale"
            android:layout_weight="1"
            android:background="#0173B9"/>

        <Button
            android:id="@+id/flow_clienti"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Client"
            android:layout_weight="1"
            android:background="#0173B9"/>

        <Button
            android:id="@+id/flow_furnizor"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Furnizor"
            android:layout_weight="1"
            android:background="#005AA0"/>
    </LinearLayout>

</RelativeLayout>
